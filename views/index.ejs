<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <title>Filmes</title>
    <script src="https://code.jquery.com/jquery-3.6.0.js"
        integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous">
    </script>
</head>

<body>
    <%- include('./partials/header.ejs') %>
    <main>
        <% filmes.forEach(element => { %>
        <a href="detalhes/<%= element.id %> ">
            <div class="card-container">
                <div class="card-image">
                    <img src="<%= element.img %> " alt="<%= element.nome %> ">
                </div>
                <div card="card-title">
                    <div> <%= element.nome %> </div>
                </div>
                <div class="btn-container">
                    <a href="/apagar/<%= element.id %> ">
                        <img class="delete-icon" src="/img/delete.png" alt="delete icon">
                    </a>
                    <a href="/editar/<%= element.id %> ">
                        <img class="edit-icon" src="/img/edit.png" alt="edit icon">
                    </a>
                </div>
            </div>
        </a>
        <% }) %>
    </main>
</body>

</html>